{
  "name": "nodejs-simpleapi",
  "version": "1.0.0",
  "description": "A simple REST API for practicing DevOps, SRE, and cloud infrastructure skills",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/index.js",
    "test": "cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5433/simpleapi_test jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5433/simpleapi_test jest --watch",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "db:seed": "ts-node prisma/seed.ts",
    "prisma:generate": "prisma generate"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ]
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pino": "^8.14.1",
    "pino-http": "^8.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.3",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "prisma": "^6.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
